<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/click_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cn.campsg.com.hello.Activity.ClickActivity"
    android:background="@mipmap/click_detail_bg"
    >
    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="40dp"
        android:layout_centerInParent="true"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


<TextView
    android:id="@+id/type_show"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:text="type"
    android:textSize="15sp"
    />
    <TextView
        android:id="@+id/money_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="money"
        android:layout_alignParentRight="true"
        android:textSize="15sp"
        android:textStyle="bold"
        />
         <View
                android:id="@+id/view_line"
                android:layout_below="@+id/money_show"
                android:layout_width="300dp"
                android:layout_height="1px"
                android:layout_centerHorizontal="true"
             android:background="#d4d1d1"></View>
    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/time_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="时间"
       android:layout_below="@id/type_show"
        android:textSize="15sp"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="time"
        android:layout_marginRight="20dp"
        android:textSize="15sp"
        android:layout_below="@id/money_show"
        android:layout_alignParentRight="true"
        />

    <TextView
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:id="@+id/where"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="where"
        android:layout_below="@id/time"
        android:textSize="15sp"
        android:layout_alignParentRight="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/description"
        android:layout_below="@id/where"
       android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
       />
        </RelativeLayout>
</android.support.v7.widget.CardView>
    <Button
        android:id="@+id/edit_btn"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="编辑"
        android:layout_centerHorizontal="true"
       android:layout_marginTop="400dp"
        android:background="@drawable/shape_btn"/>
</RelativeLayout>



<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <!--线条部分-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingLeft="25dp">

        <View
            android:id="@+id/time_line_top"
            android:layout_width="1px"
            android:layout_height="20dp"
            android:background="#CBCBCB" />

        <ImageView
            android:id="@+id/img_type"
            android:layout_width="25dp"
            android:layout_height="25dp"
             />

        <View
            android:id="@+id/time_line_bottom"
            android:layout_width="1px"
            android:layout_height="40dp"
            android:background="#CBCBCB" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp">
<TextView
    android:id="@+id/type_textView"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="25dp"
    android:gravity="left"
    android:textSize="15sp"
    android:text="支出"
    />
    <TextView
        android:id="@+id/money_textView"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15dp"
        android:textSize="15sp"
        android:text="500"
        android:layout_marginRight="20dp"
        />
    <TextView
        android:id="@+id/description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/type_textView"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="20dp"
        android:gravity="left"
        android:textSize="10sp"
        />
        <TextView
            android:id="@+id/text_where"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/description_textView"/>
    <TextView
        android:id="@+id/data_textView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:gravity="left"
        android:layout_marginLeft="20dp"
        android:textSize="10dp"
        android:text="2017-07018 01:03"
        android:layout_marginTop="20px"
        android:textColor="#d1d0d0"
        />
    </RelativeLayout>
</RelativeLayout>
